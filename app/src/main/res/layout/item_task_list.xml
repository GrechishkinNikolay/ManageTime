<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="64dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        tools:text="some text for testing, veeeeery much of text fo example. To testing it's will display in this placesome text for testing,rgghttrn"/>

    <CheckBox
        android:id="@+id/taskIsDoneCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:id="@+id/deleteButtonImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/ic_menu_delete"/>

</LinearLayout>